{
  "name": "playwright-ng-schematics",
  "version": "1.3.1",
  "description": "Playwright Angular schematics",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "cpy \"src/**/*.json\" \"src/**/files/**/*\" lib",
    "lint": "biome ci",
    "lint:fix": "biome check --write",
    "test": "jest",
    "test:ci": "jest --runInBand"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/playwright-community/playwright-ng-schematics.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "angular",
    "e2e",
    "playwright",
    "schematics",
    "testing"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@schematics/angular": "^19.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "cpy-cli": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@angular-devkit/architect": ">= 0.1900.0 < 0.2000.0",
    "@angular-devkit/schematics": "^19.0.0"
  },
  "builders": "./lib/builders/builders.json",
  "schematics": "./lib/schematics/collection.json",
  "ng-add": {
    "save": "devDependencies"
  }
}
